# PydanticAI Agentic Workflow System v1.0.0 - Production Environment Template
# Copy this file to .env and configure for your production environment

# ==========================================
# AWS BEDROCK CONFIGURATION (OPTIONAL)
# ==========================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BEDROCK_CHAT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_NAME=PydanticAI Agentic Workflow System
APP_VERSION=1.0.0
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# ==========================================
# VECTOR STORE CONFIGURATION
# ==========================================
FAISS_INDEX_PATH=data/faiss_index
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# ==========================================
# MCP SERVER CONFIGURATION
# ==========================================
MCP_CONFIG_PATH=config/mcp_servers.yaml
MCP_TIMEOUT=30.0
MCP_RETRY_ATTEMPTS=3

# ==========================================
# MEMORY CONFIGURATION
# ==========================================
MEMORY_CHUNK_SIZE=1000
MEMORY_OVERLAP_SIZE=100
MAX_MEMORY_TOKENS=2000

# ==========================================
# SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
